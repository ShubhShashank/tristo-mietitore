#!/bin/bash

export EEGNG_SETTINGS=$(pwd)/conf.py

if [ "$1" == "start" ]; then
	rm -f ./var/gunicorn.*
	touch ./var/gunicorn.errors
	tail -n 0 -f ./var/gunicorn.errors & pid=$!
	gunicorn -c ./etc/gunicorn.conf eegat.web:app
	sleep 1
	chmod go= ./var/gunicorn.*
	kill $pid
elif [ "$1" == "status" ]; then
	tail ./var/gunicorn.{errors,accesses}
elif [ "$1" == "reload" ]; then
	if [ -r ./var/gunicorn.pid ]; then
		tail -n 0 -f ./var/gunicorn.errors & pid=$!
		kill -HUP $(cat ./var/gunicorn.pid)
		sleep 1
		kill $pid
	else
		echo 'no pidfile present'
	fi
else
	if [ -r ./var/gunicorn.pid ]; then
		tail -n 0 -f ./var/gunicorn.errors & pid=$!
		kill $(cat ./var/gunicorn.pid)
		sleep 1
		kill $pid
	else
		echo 'no pidfile present'
	fi
fi
